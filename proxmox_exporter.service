[Unit]
Description=Simple Prometheus exporter for Proxmox
After=network.target
Wants=network-online.target

[Service]
Restart=always
Type=simple
ExecStart=/usr/local/bin/proxmox_exporter -listen.address=10.100.2.1:9914 -config.file=/etc/proxmox_exporter.yaml
Environment=

[Install]
WantedBy=multi-user.target
